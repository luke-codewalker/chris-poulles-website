{{#with htmlWebpackPlugin.options.data}}
{{#> baseLayout}}
{{> header}}
{{> navbar}}
<noscript>To view this page properly Javscript needs to be enabled!</noscript>
<main>
    {{#> section title="showreel"}}
    {{>showreel}}
    {{/section}}

    {{#> section title="fiction"}}
    {{#each films.fiction}}
    {{> teaser-tile film=this}}
