<div class="image-gallery">
    <button class="image-gallery__button--left">
        <i class="icofont-thin-left icofont-md"></i>
    </button>
    <div class="image-gallery__images">
        {{#each images}}
        <div class="image-gallery__image">
            {{#> lightbox image=this.fields}}
            <picture>
                <source media="(min-width: 1024px)" srcset="{{../this.fields.file.url}}?w=1024">
                <source media="(min-width: 720px)" srcset="{{../this.fields.file.url}}?w=720">
                <img src="{{../this.fields.file.url}}?w=420" alt="{{../this.fields.description}}">
            </picture>
            {{/lightbox}}
        </div>
        {{/each}}
    </div>
    <button class="image-gallery__button--right">
        <i class="icofont-thin-right icofont-md"></i>
    </button>
</div>